<%- include("template/cabecera.ejs", {tituloWeb:'Panel de Administración'}) %>

    <div class="container">
        <h1>CRUD Mongo</h1>
        <a class="btn btn-success btn-block my-4" href="/objeto/crearObjeto">Crear un nuevo Objeto</a>
        <a class="btn btn-success btn-block my-4" href="/">Volver al inicio</a>
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Descripción</th>
                </tr>
            </thead>
            <tbody>
                <% if (arrayObjeto.length> 0) { %>
                    <!--Haremos el foreach para recorrer el array-->
                    <% arrayObjeto.forEach(objeto=> { %>
                        <tr>
                            <th scope="row">
                                <%= objeto.id %>
                            </th>
                            <td>
                                <%= objeto.nombre %>
                            </td>
                            <td>
                                <%= objeto.descripcion %>
                            </td>

                            <td>
                                <a class="btn btn-warning btn-sm" href="/objeto/<%= objeto.id %>">Editar/Eliminar</a>
                            </td>
                        </tr>
                        <% }) %>
                            <% } %> 
            </tbody>
        </table>
    </div>


    <%- include("template/footer.ejs") %>